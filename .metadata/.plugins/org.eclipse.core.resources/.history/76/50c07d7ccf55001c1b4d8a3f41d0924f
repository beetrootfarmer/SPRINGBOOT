<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.pawmap.mapper.FileMapper">
	
	<select id="getFileListByFreeBoardSeq" resultType="com.pawmap.VO.FileVO">
		SELECT * FROM file
		WHERE board_seq = #{boardSeq}
		AND board_type = 'f';
	</select>
	
	<insert id="insertBoardFileList" parameterType="com.pawmap.VO.FileVO">
		INSERT INTO file (
			board_seq,
			file_seq,
			board_type,
			user_id,
			originalFilename,
			filepath,
			filesize				
		)
		VALUES
		(
			#{boardSeq},
			(
				SELECT IFNULL(MAX(file_seq),0) +1
					FROM file f
				WHERE board_seq = #{boardSeq}
			),
			'f',
			#{userId},
			#{originalFileName},
			#{filePath},
			#{fileSize}
		)
	</insert>
	
	

	<delete id="deleteFileByBoardSeq">
		DELETE FROM file
		WHERE board_seq = #{boardSeq}
		AND board_type = 'f'
	</delete>
	
	<delete id="deleteOneFile">
		DELETE FROM file
		WHERE file_seq = #{fileSeq}
		AND 
		board_seq = #{boardSeq}
	</delete>
	
	
	<!-- PetFile관련 -->

	<insert id="insertPetFileList" parameterType="com.pawmap.VO.FileVO">
			INSERT INTO file (
				file_seq,
				board_seq,
				board_type,
				user_id,
				originalFilename,
				filepath,
				filesize				
			)
			VALUES
			(
				(
					SELECT IFNULL(MAX(file_seq),0) +1
						FROM FILE P
					WHERE board_type = 'p'
				),
				#{boardSeq}+1,
				'p',
				#{userId},
				#{originalFileName},
				#{filePath},
				#{fileSize}
			)
		</insert>
	<update id="updatePetFileList" parameterType="com.pawmap.VO.FileVO">
			UPDATE  FILE 
				BOARD_SEQ = #{boardSeq}+1,
				ORIGINALFILENAME =#{originalFileName},
				FILEPATH = #{filePath},
				FILESIZE = 	#{fileSize}	
			WHERE 
				FILE_SEQ = #{fileSeq}
			AND
				USER_ID = #{userId}			
		
		</update>
		

	<select id="getFileListByUserId" resultType="com.pawmap.VO.FileVO">
		SELECT * FROM pawmap.FILE
		WHERE 
        board_type = 'p'
        AND
        USER_ID = #{userId}
        AND
        board_seq = #{petSeq};
       
	</select>
	
	<delete id="deletePetFile" >
		DELETE FROM file
		WHERE 
			board_type = 'p'
		AND 
			board_seq = #{petSeq}
		 AND
       		 USER_ID = #{userId};
	</delete>
  	
</mapper>	